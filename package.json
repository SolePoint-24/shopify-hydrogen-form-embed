  "keywords": [
    "shopify",
    "hydrogen",
    "react",
    "shopify-forms",
    "form"
  ],
  "author": "Solepoint Tech Solution",
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.5.1",
    "@types/node": "^24.0.14",
    "@types/react": "^18.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SolePoint-24/shopify-hydrogen-form-embed.git"
  },
  "homepage": "https://github.com/SolePoint-24/shopify-hydrogen-form-embed",
  "bugs": {
    "url": "https://github.com/SolePoint-24/shopify-hydrogen-form-embed/issues"
  },
